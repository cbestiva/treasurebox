  <div class="" ng-controllers="PostsCtrl">
    <form action="" method="post" onsubmit="return false;" role="form">
      <p>
        Select your city: <input type="text" ng-model="post.city" typeahead="suggestion for suggestion in cities($viewValue)">
      </p>
    </form>
  </div>


  <h1>Home Page</h1>
  <p>Will display all posts/items here...</p>


  <div ng-repeat="post in posts">
    <div id="index_posts">
      {{post.image}}
      {{post.city}}
      {{post.name}}<br>
      {{post.category}}<br>
      {{post.description}}<br>
      {{post.price}}<br>
    </div>
  </div>
