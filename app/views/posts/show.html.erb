<div class="container">
  <h2>Welcome <%= current_user.username %>!</h2><br>

  <h4>Post an item for sale:</h4>
  <div ng-controller="UserPostsCtrl" flow-init>

    <form class="form-horizontal" role="form" ng-submit="addPost()" enctype="multipart/form-data" action="https://treasurebox-photos.s3.amasonaws.com/" method="post">
      <input type="hidden" name="key" value="uploads/${filename}">
      <input type="hidden" name="AKIAJJBO6MLEYMSHLGIA" value="+cudz/G7A0JofHYSr3Ma0MqTHvqFBRyKGFsRz8VI"> 
      <input type="hidden" name="acl" value="private"> 
      <input type="hidden" name="success_action_redirect" value="http://localhost:3000/users/show/:id">
      <input type="hidden" name="policy" value="YOUR_POLICY_DOCUMENT_BASE64_ENCODED">
      <input type="hidden" name="signature" value="YOUR_CALCULATED_SIGNATURE">
      <input type="hidden" name="Content-Type" value="image/jpeg">
      <!-- Field for Item City -->
      <div class="form-group">
        <label for="item_name" class="col-sm-2 control-label">City:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" typeahead="suggestion for suggestion in cities($viewValue)" ng-click"onCityClick('city')" ng-model="newPost.city">
        </div>
      </div>
      <!-- Field for Item Name -->
      <div class="form-group">
        <label for="item_name" class="col-sm-2 control-label">Item name:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="item_name" ng-model="newPost.name">
        </div>
      </div>
      <!-- Dropdown for Category Selection -->    
      <div class="form-group">
        <label for="item_name" class="col-sm-2 control-label">Select Category:</label>
        <div class="col-sm-6 dropdown btn">
          <div id="selection_dropdown" id="dLabel" role="button" class="col-sm-5 btn btn-default dropdown-toggle btn-select" data-toggle="dropdown" data-target="#">
            <span ng-model="newPost.category">{{selectedCategory}}</span>
            <b class="caret"></b>
          </div>
          <ul class="dropdown-menu" role="menu" id="selected_category" aria-labelledby="dLabel">
            <li ng-click="onCategoryClick('Clothes')">Clothes</li>
            <li ng-click="onCategoryClick('Shoes')">Shoes</li>
            <li ng-click="onCategoryClick('Accessories')">Accessories</li>
            <li ng-click="onCategoryClick('Furniture')">Furniture</li>
            <li ng-click="onCategoryClick('Electronics')">Electronics</li>
            <li ng-click="onCategoryClick('Toys & Games')">Toys & Games</li>
            <li ng-click="onCategoryClick('Household Items')">Household Items</li>
            <li ng-click="onCategoryClick('Sporting Goods')">Sporting Goods</li>
            <li ng-click="onCategoryClick('Antiques')">Antiques</li>
            <li ng-click="onCategoryClick('Other')">Other</li>
          </ul>
        </div>
      </div>
      <!-- Field for Description -->
      <div class="form-group">
        <label for="descritpion" class="col-sm-2 control-label">Description:</label>
        <div class="col-sm-4">
          <textarea class="form-control" rows="3" ng-model="newPost.description"></textarea>
        </div>
      </div>
      <!-- Field for Price -->
      <div class="form-group">
        <label for="price" class="col-sm-2 control-label">Price:</label>
        <div class="col-sm-2">
          <input type="text" class="form-control" id="price" ng-model="newPost.price">
        </div>
      </div>
      <!-- Field for Image Upload -->
      <div class="form-group">
        <div class="col-sm-4 col-sm-offset-2">
        <div class="thumbnail" ng-hide="$flow.files.length">
          <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&text=no+image">
        </div>
        <div class="thumbnail" ng-show="$flow.files.length">
          <img flow-img="$flow.files[0]" />
        </div>
          <input type="file" flow-btn ng-hide="$flow.files.length">
          <a href="#" class="btn btn-danger btn-sm" ng-show="$flow.files.length" ng-click="$flow.cancel()">Remove</a>
        </div> 
      </div>
      <!-- Add Item button -->
      <div class="form-group">
        <div class="col-sm-6 col-sm-offset-2">
          <input class="btn btn-primary btn-md col-sm-3" type="submit" value="Add Item" ng-click="uploadFile()">
        </div>
      </div>
    </form>


  <div ng-repeat="post in userPosts">
    <div id="user_posts">
      <span ng-hide="editing">
        <label>City:</label> {{post.city}}<br>
        <label>Name: </label> {{post.name}}<br>
        <label>Category:</label> {{post.category}}<br>
        <label>Description:</label> {{post.description}}<br>
        <label>Price:</label> {{post.price}}<br>
        <button type="button" class="btn btn-info btn-xs" ng-click="editing = true">Edit Post</button>
        <button type="button" class="btn btn-danger btn-xs" ng-click="deletePost()">Delete Post</button>
      </span>
      <form ng-show="editing" ng-submit="editing = false" class="form-horizontal" role="form">
      <h4>Edit Form:</h4>
        <!-- Field for Item City -->
      <div class="form-group">
        <label for="item_name" class="col-sm-2 control-label">City:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control ff_elem" id="f_elem_city" name="ff_nm_form[]" ng-click"onCityClick('city')" ng-model="post.city">
        </div>
      </div>
      <!-- Field for Item Name -->
      <div class="form-group">
        <label for="item_name" class="col-sm-2 control-label">Item name:</label>
        <div class="col-sm-4">
          <input type="text" class="form-control" id="item_name" ng-model="post.name">
        </div>
      </div>
      <!-- Dropdown for Category Selection -->    
      <div class="form-group">
        <label for="item_name" class="col-sm-2 control-label">Select Category:</label>
        <div class="col-sm-6 dropdown btn">
          <div id="selection_dropdown" id="dLabel" role="button" class="col-sm-5 btn btn-default dropdown-toggle btn-select" data-toggle="dropdown" data-target="#">
            <span ng-model="post.category">{{selectedCategory}}</span>
            <b class="caret"></b>
          </div>
          <ul class="dropdown-menu" role="menu" id="selected_category" aria-labelledby="dLabel">
            <li ng-click="onCategoryClick('Clothes')">Clothes</li>
            <li ng-click="onCategoryClick('Shoes')">Shoes</li>
            <li ng-click="onCategoryClick('Accessories')">Accessories</li>
            <li ng-click="onCategoryClick('Furniture')">Furniture</li>
            <li ng-click="onCategoryClick('Electronics')">Electronics</li>
            <li ng-click="onCategoryClick('Toys & Games')">Toys & Games</li>
            <li ng-click="onCategoryClick('Household Items')">Household Items</li>
            <li ng-click="onCategoryClick('Sporting Goods')">Sporting Goods</li>
            <li ng-click="onCategoryClick('Antiques')">Antiques</li>
            <li ng-click="onCategoryClick('Other')">Other</li>
          </ul>
        </div>
      </div>
      <!-- Field for Description -->
      <div class="form-group">
        <label for="descritpion" class="col-sm-2 control-label">Description:</label>
        <div class="col-sm-4">
          <textarea class="form-control" rows="3" ng-model="post.description"></textarea>
        </div>
      </div>
      <!-- Field for Price -->
      <div class="form-group">
        <label for="price" class="col-sm-2 control-label">Price:</label>
        <div class="col-sm-2">
          <input type="text" class="form-control" id="price" ng-model="post.price">
        </div>
      </div>
      <!-- Field for Photo Upload -->
      <div class="form-group">
        <!-- <label class="col-sm-2 control-label">Price:</label> -->
        <input type="file" class="col-md-3 col-md-offset-2 " id="image" ng-model="post.image">
      </div>
      <!-- Add Item button -->
      <div class="form-group">
        <div class="col-sm-6 col-sm-offset-2">
          <input class="btn btn-primary btn-md col-sm-3" type="submit" value="Save" ng-click="editPost()">
        </div>
      </div>
      </form>
    </div>
  </div>

  </div>
</div>